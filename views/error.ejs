<% layout('layouts/boilerplate') %>

<h1><%= err.message %></h1>
<div class="error box" role="alert">
        <p>
            Als u deze foutmelding onterecht krijgt, geef dan een seintje.
        </p>
        <p>
            <% if (err.statusCode === 404) { %>
                Een 404!
            <% } %>
        </p>
        <p>
            <% if (process.env.NODE_ENV !== 'production') { %>
                <%= err.stack %>
            <% } %>
        </p>
  </div>

  <a href="/" class="mt3 cta">Terug naar de startpagina</a>