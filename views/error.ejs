<% layout('layouts/boilerplate') %>

<div class="alert is-error" role="alert">
    <!-- <div class="content"> -->
        <h1><%= err.message %></h1>
        <p>
            Als u deze foutmelding onterecht krijgt, geef dan een seintje.
        </p>
        <p>
            <% if (err.statusCode === 404) { %>
                Een 404!
            <% } %>
        </p>
        <p>
            <% if (process.env.NODE_ENV !== 'production') { %>
                <%= err.stack %>
            <% } %>
        </p>
    <!-- </div> -->
  </div>

