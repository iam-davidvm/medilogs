<% layout('layouts/boilerplate') %>
   

    <h1><%= title %></h1>

    <section class="box">
        <h2>Mijn gegevens</h2>
        <div class="account-gegeven">
            <p><strong>Voornaam:</strong></p>
            <p><%= account[0].voornaam %></p>
        </div>
        <div class="account-gegeven">
            <p><strong>Familienaam:</strong></p>
            <p><%= account[0].familienaam %></p>
        </div>
        <div class="account-gegeven">
            <p><strong>E-mailadres:</strong></p>
            <p><%= account[0].email %></p>
        </div>
        <div class="account-gegeven">
            <label for="toggle">
                <p>Mag ik jou af en toe e-mails sturen?</p>
            </label>    
            <div class="form-element">
                <label class="toggle">
                    <input type="checkbox" name="updates" id="toggle" class="toggle-input" <%= account[0].wilUpdates ? 'checked' : '' %> disabled />
                    <span class="toggle-display" hidden>
                        <svg width="18" height="14" viewBox="0 0 18 14" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" class="toggle-icon toggle-icon-checkmark">
                            <path d="M6.08471 10.6237L2.29164 6.83059L1 8.11313L6.08471 13.1978L17 2.28255L15.7175 1L6.08471 10.6237Z" fill="currentcolor" stroke="currentcolor" />
                        </svg>
                        <svg width="13" height="13" viewBox="0 0 13 13" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" class="toggle-icon toggle-icon-cross">
                            <path d="M11.167 0L6.5 4.667L1.833 0L0 1.833L4.667 6.5L0 11.167L1.833 13L6.5 8.333L11.167 13L13 11.167L8.333 6.5L13 1.833L11.167 0Z" fill="currentcolor" />
                        </svg>
                    </span>
                </label>
            </div>
        </div>


        <a href="#" class="cta"> Wijzig wachtwoord</a>
    </section>

    <section class="box">
        <h2>Mijn gekoppelde personen</h2>
        <p class="hint">U kunt maximum 3 personen koppelen op dit moment.</p>

        <% if(patienten.length <= 1) { %>
            <p class="mt3">Momenteel zijn er nog geen personen aan uw account gekoppeld</p>
        <% } else { %>
            <table id="table-personen">
                <thead>
                    <tr>
                        <th>Voornaam</span></th>
                        <th>Familienaam</span></th>
                        <th>Verwijderen</th>
                    </tr>
                </thead>

                <tbody>
                    <% for(let i = 1; i < patienten.length; i++) { %>
                        <tr>
                            <td><%= patienten[i].voornaam %></td>
                            <td><%= patienten[i].familienaam %></td>
                            <td><a href="/<%= account[0]._id %>/<% patienten[i]._id %>/verwijderen" class="cta focus-red">Verwijderen</a></td>
                        </tr>
                    <% } %> 
                </tbody>
            </table>
        <% } %>

        <% if(patienten.length < 4) { %>
            <div class="dash-links">
                <a class="dash-link btn btn-pri" href="/<%= account[0]._id %>/koppelen" title="Persoon koppelen">
                    <img src="/assets/icons/koppelen.svg" alt="" class="dash-link-icon">
                    <span class="dash-link-text">Persoon koppelen</span>
                </a>
            </div>
        <% } %>
    </section>

