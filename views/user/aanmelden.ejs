<% layout('layouts/boilerplate') %>

<form action="/aanmelden" class="form user-form full-width-form box subtle-shadow" method="POST">
    <h1><%= title %></h1>
    <div class="form-element">
        <label for="username">E-mailadres</label>
        <input type="email" name="username" id="username" pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?" required>
    </div>

    <div class="form-element">
        <label for="password">wachtwoord</label>
        <div class="password-container">
            <input type="password" name="password" id="password" required placeholder=" ">
            <span class="password-eye"><img src="/assets/eye.svg" id="toggle-password" alt=""></span>
        </div>
    </div>

    <button class="btn btn-pri">Aanmelden</button>

    <p class="text-center">Heeft u nog geen account? <a href="registreren" class="cta">Account aanmaken</a></p>


</form>

<script src="/js/userform.js"></script>